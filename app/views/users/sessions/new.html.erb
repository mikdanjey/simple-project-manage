<% provide(:title, "Sign in") %>

<div class="content-wrap">
    <h6>Sign In</h6>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <%= f.text_field :username, autofocus: true, class: "form-control", placeholder:"User Name" %>
    
    <%= f.password_field :password, autocomplete: "off", class:"form-control", type:"password", placeholder:"Password" %>
    
    <% if devise_mapping.rememberable? -%>
    <div class="pull-left">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
      
    <% end -%>
  
    <div class="action">
        <%= f.submit "Log in" , class:"btn btn-primary signin" %>
    </div>
    
    <% end %>
</div>
